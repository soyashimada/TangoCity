<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCalendarMonth" parent="@style/Theme.TangoCity">
        <item name="android:textColorPrimary">@color/bold_text</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/bold_text</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="@style/MaterialAlertDialog.Material3.Body.Text" >
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="Widget.App.NegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/bold_text</item>
    </style>

    <style name="Widget.App.PositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/done_button</item>
    </style>
    <style name="boldText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/bold_text</item>
    </style>

    <style name="normalText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="normalTabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="boldTabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bold_text</item>
    </style>

    <style name="buttonText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>